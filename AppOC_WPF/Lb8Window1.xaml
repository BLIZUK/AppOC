<Window x:Class="AppOC_WPF.Lb8Window1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AppOC_WPF"
        mc:Ignorable="d"
        Title="Lb8Window1" Height="200" Width="300">
    <Grid>
        <Label Content="Введите n:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="20,38,0,0"/>
        <TextBox Name="InputN" HorizontalAlignment="Left" VerticalAlignment="Top" Width="67" Margin="20,72,0,0"/>

        <RadioButton x:Name="RB1" Content="Явная загрузка DLL" HorizontalAlignment="Left" Margin="142,48,0,0" VerticalAlignment="Top" Checked="RB1_Checked"/>
        <RadioButton x:Name="RB2" Content="Неявная загрузка DLL" HorizontalAlignment="Left" Margin="142,81,0,0" VerticalAlignment="Top"/>

        <Button Content="Вычислить" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="22,99,0,0" Click="CalculateButton_Click"/>

        <Label Content="Ответ:" HorizontalAlignment="Left" Margin="21,135,0,0" VerticalAlignment="Top"/>
        <Label Name="ResultLabel" Content="0" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="75,135,0,0"/>
    </Grid>
</Window>
